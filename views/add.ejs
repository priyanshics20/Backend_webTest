<body style="margin: auto; width: 70%;">
    <form method="post" action="/this-is-a-new-article">
        <h4> New Article</h4>
        <label>
          Title
        </label>
        <br>
        <input type="text" for="title" name="title" placeholder="this is a new article">
        <br>
        <label>
            Description
        </label>
        <br>
        <textarea for="desc" name="desc"></textarea>
        <br>
        <label>
            MarkDown
        </label>
        <br>
        <textarea for="mark" name="mark"></textarea>
        
        <br>
        <button type="button" class="btn btn-secondary">Cancel</button>

        <button type="submit" class="btn btn-info">Submit</button>

    </form>
